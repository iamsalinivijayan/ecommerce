{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "preserve",
    "moduleResolution": "node", 
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",  // Root folder
    "paths": {
      "@/*": ["app/*"], // Map alias @ to your app folder
      "@/components/*": ["app/components/*"], // Map alias @/components to your components folder
      "@/sanity/*": ["sanity/*"]  // If you're using sanity folder, ensure this is mapped too
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
